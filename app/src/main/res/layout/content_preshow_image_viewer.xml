<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="uk.org.potentialdifference.stillapp.preshow.PreshowImageViewer"
    android:padding="0dp">

    <ImageView
        android:id="@+id/preshow_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/preshow_1" />
    <TextView
        android:id="@+id/preshow_caption"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/image_caption_1"
        android:padding="4dp"
        android:textSize="9pt" />

</LinearLayout>

