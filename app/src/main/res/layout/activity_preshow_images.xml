<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    tools:context="uk.org.potentialdifference.stillapp.preshow.PreshowImages">




        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="1"
            android:id="@+id/preshow_button_1"
            android:layout_column="1"
            android:padding="40dp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:textSize="10pt"
            android:layout_margin="40dp"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="2"
            android:id="@+id/preshow_button_2"
            android:layout_column="2"
            android:padding="40dp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:layout_alignParentRight="true"
            android:textSize="10pt"
            android:layout_margin="40dp" />


        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="3"
            android:id="@+id/preshow_button_3"
            android:layout_column="1"
            android:padding="40dp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:textSize="10pt"
            android:layout_margin="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="4"
            android:id="@+id/preshow_button_4"
            android:layout_column="2"
            android:padding="40dp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:textSize="10pt"
            android:layout_margin="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>



        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="5"
            android:id="@+id/preshow_button_5"
            android:padding="40dp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:textSize="10pt"
            android:layout_margin="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="Back"
        android:id="@+id/preshow_button_back"
        android:padding="20dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:textSize="8pt"
        android:layout_margin="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
