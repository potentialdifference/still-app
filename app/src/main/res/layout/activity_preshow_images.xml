<?xml version="1.0" encoding="utf-8"?>


<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    tools:context="uk.org.potentialdifference.stillapp.preshow.PreshowImages">


    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="1"
            android:id="@+id/preshow_button_1"
            android:layout_column="1"
            android:padding="40dp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:textSize="10pt"
            android:layout_margin="10dp" />
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="2"
            android:id="@+id/preshow_button_2"
            android:layout_column="2"
            android:padding="40dp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:textSize="10pt"
            android:layout_margin="10dp" />

    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="3"
            android:id="@+id/preshow_button_3"
            android:layout_column="1"
            android:padding="40dp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:textSize="10pt"
            android:layout_margin="10dp"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="4"
            android:id="@+id/preshow_button_4"
            android:layout_column="2"
            android:padding="40dp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:textSize="10pt"
            android:layout_margin="10dp"/>

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="5"
            android:id="@+id/preshow_button_5"
            android:layout_column="1"
            android:padding="40dp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:textSize="10pt"
            android:layout_margin="10dp"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="6"
            android:id="@+id/preshow_button_6"
            android:layout_column="2"
            android:padding="40dp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:textSize="10pt"
            android:layout_margin="10dp"/>
    </TableRow>

</TableLayout>
